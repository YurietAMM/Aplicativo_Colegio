<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/datatables.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <style>
        body {
            padding: 0;
            margin: 0;
        }

        #navbar-toggler a {
            color: white;
        }

        .nav-item {
            display: flex;
            align-items: center;
        }
        /*Personalizadas por Yuriet para los botones de acciones y los introduccir*/

        .btn {
            margin: 8px !important;
        }

        .form-select, .form-control {
            margin-bottom: 1em !important;
            width: 15em !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-xs bg-secondary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-toggler" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-align-center" id="navbar-toggler">
                <a class="navbar-brand" href="#">Colegio-Logo</a>
                <ul class="navbar-nav d-flex justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">
                            @Html.ActionLink("Seccion", "Index", "Seccion", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">
                            @Html.ActionLink("Cursos", "Index", "Curso", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Periodo", "Index", "Periodo", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Alumno", "Index", "Alumno", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Docente", "Index", "Docente", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Grado-Sección", "Index", "GradoSeccion", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Curso a Grados", "Index", "PeriodoGradoCurso", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Curso a Docente", "Index", "GradoSeccionAula", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Matricula", "Index", "Matricula", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Rol", "Index", "RolPagina", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @Html.ActionLink("Usuario", "Index", "Usuario", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>
    <script src="~/Scripts/datatables.min.js"></script>
    <script src="~/Scripts/jquery-3.6.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
            integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V"
            crossorigin="anonymous"></script>
</body>
</html>

