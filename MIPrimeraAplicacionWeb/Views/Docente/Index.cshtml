
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/Obligatorios.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<h2>Docente</h2>

<div class="container">
    <label>Seleccione una modalidad de pago</label>
    <select id="cboModoPago" class="form-select"></select>
    <button type="button" class="btn btn-success" onclick="abrirModal(0)" data-bs-toggle='modal' data-bs-target='#agregarEditarModal'>
        Agregar
    </button>
    <div id="divTabla" class="container">

    </div>
</div>


<!-- Modal Borrar -->
<div class="modal" id="borrarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Borrar</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Esta seguro de borrar esto?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Agregar y Editar -->
<div class="modal" id="agregarEditarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar</h1>
                <button id="btn-cerrarModal" type="button" class="btn-close" onclick="cerrarModal()" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="body-editar-modal" class="modal-body">
                <div class='container'>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>ID:</div>
                        <div class='col-8 align-items-center'><input type='text' id='txtModalId' class='borrar form-control' readonly /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Nombre:</div>
                        <div class='col-8 align-items-center'><input type='text' id='txtModalNombre' class='borrar obligatorios form-control' /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Apellido Paterno:</div>
                        <div class='col-8 align-items-center'><input type='text' id='txtModalApePate' class='borrar obligatorios form-control' /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Apellido Materno:</div>
                        <div class='col-8 align-items-center'><input type='text' id='txtModalApeMate' class='borrar obligatorios form-control' /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Dirección:</div>
                        <div class='col-8 align-items-center'><input type='text' id='txtModalDirecci' class='borrar obligatorios form-control' /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Telefono Celular:</div>
                        <div class='col-8 align-items-center'><input type='number' id='txtModalTelCel' class='borrar obligatorios form-control' /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Telefono Fijo:</div>
                        <div class='col-8 align-items-center'><input type='number' id='txtModalTelFijo' class='borrar obligatorios form-control' /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Correo Electronico:</div>
                        <div class='col-8 align-items-center'><input type='email' id='txtModalEmail' class='borrar obligatorios form-control' /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Sexo:</div>
                        <div class='col-8 align-items-center'><select id="cboModalSexo" class="borrar obligatorios form-select"></select></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Fecha Contrato:</div>
                        <div class='col-8 align-items-center'><input type='text' id='txtModalFechaContrato' class='borrar obligatorios form-control' min="0" /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Modalidad Contrato:</div>
                        <div class='col-8 align-items-center'><select id="cboModalContra" class="borrar obligatorios form-select"></select></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Seleccionar Foto:</div>
                        <div class='col-8 align-items-center'><input type='file' id='btnModalFoto' class='borrar form-control form-control-sm' value="..." /></div>
                    </div>
                    <div class='row text-align-center d-flex'>
                        <div class='col-4 text-align-center align-items-center'>Foto:</div>
                        <div class='col-8 align-items-center'>
                            <img id="imgModalFoto" width="150" height="100" style="border: 1px solid black" />
                        </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" id='btnAgregarEditar' onclick="Agregar()" class="btn btn-success" value="Agregar" />
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.6.2.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Docente.js"></script>
<script src="~/Scripts/datatables.min.js"></script>